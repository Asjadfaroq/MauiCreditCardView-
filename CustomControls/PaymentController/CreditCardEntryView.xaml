<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiCreditCardView.CustomControls.CreditCardEntryView"
    xmlns:controls="clr-namespace:MauiCreditCardView.CustomControls">

    <Grid RowDefinitions="Auto,Auto">


        <Border HeightRequest="200"
                Grid.Row="0"
                Margin="15,10,15, 0"
                StrokeThickness="0"
                Background="{StaticResource CreditCardGradient}"
                StrokeShape="RoundRectangle 12">
            <Grid>
                <Grid Padding="20"
                      RowDefinitions="Auto,*,Auto"
                      ColumnDefinitions="*,Auto">
                    <StackLayout Grid.Row="0"
                                 Grid.Column="0">

                        <Border Style="{StaticResource PreviewIconStyle}">
                            <Label x:Name="PreviewCardIcon"
                                   Text="--"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource White}"
                                   HorizontalOptions="Center"
                                   FontFamily="poppins500"/>
                        </Border>

                        <Image
                            Source="ic_chip.png"
                            HeightRequest="30"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"/>

                        <Label x:Name="PreviewCardNumber"
                               Text="•••• •••• •••• ••••"
                               CharacterSpacing="6"
                               Margin="0,10,0,0"
                               TextColor="{StaticResource White}"
                               FontFamily="poppins500"
                               FontSize="16"
                               HorizontalOptions="Start"
                               VerticalOptions="End"/>

                    </StackLayout>



                    <Image Grid.Row="0"
                           Grid.Column="1"
                           Source="ic_card_logo.png"
                           HeightRequest="30"
                           WidthRequest="30"
                           HorizontalOptions="End"
                           VerticalOptions="Start"/>

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Text="CARDHOLDER NAME"
                           TextColor="{StaticResource White}"
                           FontFamily="poppins400"
                           FontSize="10"
                           VerticalOptions="End"/>

                    <Label x:Name="PreviewCardName"
                           Grid.Row="2"
                           Grid.Column="0"
                           Text="YOUR NAME"
                           TextColor="{StaticResource White}"
                           FontFamily="poppins500"
                           FontSize="14"
                           HorizontalOptions="Start"/>

                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="EXPIRES"
                           TextColor="{StaticResource White}"
                           FontFamily="poppins400"
                           FontSize="10"
                           HorizontalOptions="Start"
                           VerticalOptions="End"/>

                    <Label x:Name="PreviewExpireDate"
                           Grid.Row="2"
                           Grid.Column="1"
                           Text="MM/YY"
                           TextColor="{StaticResource White}"
                           FontFamily="poppins500"
                           FontSize="14"
                           HorizontalOptions="End"
                           VerticalOptions="End"/>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              Padding="15">
            <Border Style="{StaticResource CardStyle}"/>

            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                  Margin="15,10">

                <Label
                    Grid.Row="0"
                    Text="Card Details"
                    Style="{StaticResource DarkNavyBlueTextStyle500}"
                    FontSize="14"
                    VerticalOptions="Start"
                    Margin="4,4,0,15"/>

                <Border x:Name="cardNumberBorder"
                        Grid.Row="1"
                        Style="{StaticResource DarkNavyBlueStrokeStyle}"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 15"
                        Padding="14, 12">
                    <Grid RowDefinitions="Auto,Auto"
                          ColumnDefinitions="*, Auto"
                          RowSpacing="8">
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Text="Card Number"
                               Opacity="0.53"
                               FontSize="12"
                               Style="{StaticResource BlackTextStyle400}"
                               VerticalOptions="Center"/>
                        <controls:CustomEntry
                            x:Name="cardNumberEntry"
                            Grid.Column="0"
                            Keyboard="Numeric"
                            MaxLength="19"
                            Text="{Binding CardNumber, Mode=TwoWay, Source={RelativeSource AncestorType={x:Type controls:CreditCardEntryView}}}"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                            Placeholder="Enter your card number"
                            PlaceholderColor="{StaticResource LightGray}"
                            FontSize="12"
                            FontFamily="poppins400"
                            Grid.Row="1"
                            Unfocused="OnEntryUnfocused"
                            Focused="OnEntryFocused"/>
                        <Image x:Name="cardLogoImage"
                               Grid.Column="1"
                               Grid.RowSpan="2"
                               VerticalOptions="Center"
                               HeightRequest="25"
                               WidthRequest="25"/>
                    </Grid>
                </Border>

                <Border x:Name="cardNameBorder"
                        Margin="0,10,0,0"
                        Grid.Row="2"
                        Style="{StaticResource DarkNavyBlueStrokeStyle}"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 15"
                        Padding="14, 12">
                    <Grid RowDefinitions="Auto,Auto"
                          RowSpacing="8">
                        <Label Grid.Row="0"
                               Text="Card Holder"
                               Opacity="0.53"
                               FontSize="12"
                               Style="{StaticResource BlackTextStyle400}"
                               VerticalOptions="Center"/>
                        <controls:CustomEntry
                            x:Name="cardNameEntry"
                            MaxLength="19"
                            Text="{Binding CardName, Mode=TwoWay, Source={RelativeSource AncestorType={x:Type controls:CreditCardEntryView}}}"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                            Placeholder="Card Holder Name"
                            PlaceholderColor="{StaticResource LightGray}"
                            FontSize="12"
                            FontFamily="poppins400"
                            Grid.Row="1"
                            Unfocused="OnEntryUnfocused"
                            Focused="OnEntryFocused"/>
                    </Grid>
                </Border>

                <Grid Grid.Row="3"
                      ColumnDefinitions=".5*,.5*"
                      Margin="0,10,0,0"
                      ColumnSpacing="10">

                    <Border x:Name="expiryDateBorder"
                            Style="{StaticResource DarkNavyBlueStrokeStyle}"
                            Grid.Column="0"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 15"
                            Padding="14, 12">
                        <Grid RowDefinitions="Auto,Auto"
                              RowSpacing="8">
                            <Label Grid.Row="0"
                                   Text="Expiry"
                                   Opacity="0.53"
                                   FontSize="12"
                                   Style="{StaticResource BlackTextStyle400}"
                                   VerticalOptions="Center"/>
                            <controls:CustomEntry
                                x:Name="expireDateEntry"
                                Placeholder="mm/yy"
                                Text="{Binding ExpireDate, Mode=TwoWay, Source={RelativeSource AncestorType={x:Type controls:CreditCardEntryView}}}"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                Keyboard="Numeric"
                                PlaceholderColor="{StaticResource LightGray}"
                                FontSize="12"
                                FontFamily="poppins400"
                                Grid.Row="1"
                                Unfocused="OnEntryUnfocused"
                                Focused="OnEntryFocused"/>
                        </Grid>
                    </Border>

                    <Border x:Name="cvcBorder"
                            Style="{StaticResource DarkNavyBlueStrokeStyle}"
                            Grid.Column="1"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 15"
                            Padding="14, 12">
                        <Grid RowDefinitions="Auto,Auto"
                              RowSpacing="8">
                            <Label Grid.Row="0"
                                   Text="CVC Number"
                                   Opacity="0.53"
                                   FontSize="12"
                                   Style="{StaticResource BlackTextStyle400}"
                                   VerticalOptions="Center"/>
                            <controls:CustomEntry
                                x:Name="cvcEntry"
                                Placeholder="CVC"
                                Keyboard="Numeric"
                                Text="{Binding CvcNumber, Mode=TwoWay, Source={RelativeSource AncestorType={x:Type controls:CreditCardEntryView}}}"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                PlaceholderColor="{StaticResource LightGray}"
                                FontSize="12"
                                FontFamily="poppins400"
                                Grid.Row="1"
                                Unfocused="OnEntryUnfocused"
                                Focused="OnEntryFocused"/>
                        </Grid>
                    </Border>
                </Grid>

                <Label
                    Grid.Row="4"
                    Margin="5,0,0,0"
                    Text="{Binding ErrorMessage, Source={RelativeSource AncestorType={x:Type controls:CreditCardEntryView}}}"
                    TextColor="{StaticResource Primary}"
                    HorizontalOptions="Start"/>

                <Button x:Name="addCardButton"
                        Grid.Row="5"
                        Text="Add Card"
                        Style="{StaticResource CustomLongBtn}"
                        Command="{Binding AddCardButtonCommand, Source={RelativeSource AncestorType={x:Type controls:CreditCardEntryView}}}"
                        IsEnabled="{Binding IsAddCardButtonEnabled, Source={RelativeSource AncestorType={x:Type controls:CreditCardEntryView}}}"
                        Margin="0,22,0,0"/>

            </Grid>
        </Grid>


    </Grid>
</ContentView>